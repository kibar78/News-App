<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_breaking">

    <fragment
        android:id="@+id/navigation_breaking"
        android:name="com.example.newsapp.ui.breaking.BreakingNewsFragment"
        android:label="@string/title_breaking"
        tools:layout="@layout/fragment_breaking"/>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.newsapp.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.newsapp.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search"/>



</navigation>